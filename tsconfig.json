{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "typeRoots": [
          "./node_modules/@types"
        ],
        "types": [
          "node"
        ]
      },
      "include": [
        "server/**/*.ts",
        "server/*.ts",
        "tests/**/*.ts", "server/models/index.js"
      ],
      "exclude": [
        "node_modules"
      ],
      "compileOnSave": true,
      "buildOnSave": true
}